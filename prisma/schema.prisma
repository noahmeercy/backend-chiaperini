generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  password String
}

model CadastroFicha {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String   
  registro         Int     @unique
  funcao           String?
  Setor            String
  UniformeCamisa   String?
  UniformeCalca    String?
  UniformeCalcado  String?
  Admissao         DateTime @default(now())
}